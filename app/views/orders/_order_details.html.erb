<% @order.line_items.each do |line_item| %>
  <tr>
    <td>
      <%= image_tag line_item.product.image.tiny %>
    </td>
    <td>
      <h4><%= line_item.product.name %></h4>
      <br />
      <p><%= line_item.product.description %>
    </td>
    <td>
      <%= number_to_currency(line_item.item_price_cents / 100.00) %>
    </td>
    <td>
      <%= line_item.quantity %>
    </td>
    <td>
      <%= number_to_currency(line_item.total_price_cents / 100.00) %>
    </td>
  </tr>
<% end %>
